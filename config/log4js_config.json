{
  "appenders": {
    "out": {
      "type": "console"
    },
    "workast-articles": {
      "type": "file",
      "filename": "logs/workast-articles.log",
      "category": "workast-articles",
      "maxLogSize": 204800,
      "backups": 10
    },
    "access": {
      "type": "file",
      "filename": "logs/access.log",
      "category": "access",
      "maxLogSize": 204800,
      "backups": 3
    }
  },
  "categories": {
    "default": {
      "appenders": [
        "out",
        "workast-articles",
        "access"
      ],
      "level": "info"
    }
  }
}