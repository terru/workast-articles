{
  "appenders": {
    "out": {
      "type": "console"
    },
    "middleware": {
      "type": "file",
      "filename": "logs/middleware.log",
      "category": "middleware",
      "maxLogSize": 204800,
      "backups": 10
    },
    "TPT": {
      "type": "file",
      "filename": "logs/tpt.log",
      "category": "TPT",
      "maxLogSize": 204800,
      "backups": 10
    },
    "stripe": {
      "type": "file",
      "filename": "logs/stripe.log",
      "category": "stripe",
      "maxLogSize": 204800,
      "backups": 10
    },
    "access": {
      "type": "file",
      "filename": "logs/access.log",
      "category": "access",
      "maxLogSize": 204800,
      "backups": 3
    }
  },
  "categories": {
    "default": {
      "appenders": [
        "out",
        "middleware",
        "TPT",
        "stripe",
        "access"
      ],
      "level": "info"
    }
  }
}